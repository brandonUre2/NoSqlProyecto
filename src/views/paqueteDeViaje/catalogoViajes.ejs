<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Catálogo de Paquetes de Viaje</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<header>
  <%- include('../shared/header') %>
</header>
  <div class="container mt-4">
    <h1>Catálogo de Paquetes De viaje</h1>
    
    <div class="row">
      <% paquetes.forEach(paquete => { %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= paquete.Nombre %></h5>
              <p class="card-text"><%= paquete.Id %></p>
              <p class="card-text"><%= paquete.Descripcion %></p>
              <ul class="list-group list-group-flush">
                <li class="list-group-item">Ciudad: <%= paquete.ciudadNombre %></li>
                <li class="list-group-item">Transporte: <%= paquete.transporteNombre %></li>
                <li class="list-group-item">Actividades: <%= paquete.actividad1Nombre %>, <%= paquete.actividad2Nombre %></li>
              </ul>
              <div class="card-footer text-center">
                <% if (usuarioLogueado) { %>
                  <form action="/api/reserva/reservar/<%= paquete.Id %>" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-primary">Reservar</button>
                  </form>
                <% } else { %>
                  <a href="/api/auth/login" class="btn btn-primary">Inicia sesión para reservar</a>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
