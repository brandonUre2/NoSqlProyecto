<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Paquete de Viaje</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <%- include('../shared/header') %>
      </header>
    <div class="container mt-4">
        <h1>Editar Paquete de Viaje</h1>

        <form action="/api/paqueteDeViaje/editar/<%= paquete._id %>" method="POST">
            <div class="mb-3">
                <label for="Nombre" class="form-label">Nombre</label>
                <input type="text" class="form-control" id="Nombre" name="Nombre" value="<%= paquete.Nombre %>" required>
            </div>
            <div class="mb-3">
                <label for="Descripcion" class="form-label">Descripci√≥n</label>
                <textarea class="form-control" id="Descripcion" name="Descripcion" required><%= paquete.Descripcion %></textarea>
            </div>
            <div class="mb-3">
                <label for="precio" class="form-label">Precio</label>
                <input type="number" class="form-control" id="precio" name="precio" value="<%= paquete.precio %>" required>
            </div>
            <div class="mb-3">
                <label for="Id_ciudad" class="form-label">Ciudad</label>
                <select class="form-control" id="Id_ciudad" name="Id_ciudad" required>
                    <% ciudades.forEach(ciudad => { %>
                        <option value="<%= ciudad.Id %>" <%= ciudad._id.toString() === paquete.Id_ciudad.toString() ? 'selected' : '' %> >
                            <%= ciudad.Nombre %>
                        </option>
                    <% }) %>
                </select>
            </div>
            <div class="mb-3">
                <label for="Id_transporte" class="form-label">Transporte</label>
                <select class="form-control" id="Id_transporte" name="Id_transporte" required>
                    <% transportes.forEach(transporte => { %>
                        <option value="<%= transporte.Id %>" <%= transporte._id.toString() === paquete.Id_transporte.toString() ? 'selected' : '' %> >
                            <%= transporte.Nombre %> - <%= transporte.Tipo %>
                        </option>
                    <% }) %>
                </select>
            </div>
            <div class="mb-3">
                <label for="Id_actividad1" class="form-label">Actividad 1</label>
                <select class="form-control" id="Id_actividad1" name="Id_actividad1" required>
                    <% actividades.forEach(actividad => { %>
                        <option value="<%= actividad.Id %>" <%= actividad._id.toString() === paquete.Id_actividad1.toString() ? 'selected' : '' %> >
                            <%= actividad.Nombre %>
                        </option>
                    <% }) %>
                </select>
            </div>
            <div class="mb-3">
                <label for="Id_actividad2" class="form-label">Actividad 2</label>
                <select class="form-control" id="Id_actividad2" name="Id_actividad2">
                    <% actividades.forEach(actividad => { %>
                        <option value="<%= actividad.Id %>" <%= actividad._id.toString() === paquete.Id_actividad2.toString() ? 'selected' : '' %> >
                            <%= actividad.Nombre %>
                        </option>
                    <% }) %>
                </select>
            </div>
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="activo" name="activo" <%= paquete.activo ? 'checked' : '' %>>
                <label class="form-check-label" for="activo">Activo</label>
            </div>

            <button type="submit" class="btn btn-primary">Guardar cambios</button>
        </form>

        <a href="/api/paqueteDeViaje/listaPaquetes" class="btn btn-secondary mt-3">Volver a la lista</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
