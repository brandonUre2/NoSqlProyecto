<!-- src/views/paqueteDeViaje/listaPaquetes.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lista de Paquetes de Viaje</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <header>
    <%- include('../shared/header') %>
  </header>
  <div class="container mt-4">
    <h1>Lista de Paquetes de Viaje</h1>
    <a href="/api/paqueteDeViaje/crear" class="btn btn-primary mb-3">Crear Paquete</a>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Descripción</th>
          <th>Precio</th>
          <th>Ciudad</th>
          <th>Transporte</th>
          <th>Actividad 1</th>
          <th>Actividad 2</th>
          <th>Activo</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% paquetes.forEach(paquete => { %>
          <tr>
            <td><%= paquete.Nombre %></td>
            <td><%= paquete.Descripcion %></td>
            <td><%= paquete.precio %></td>
            <td><%= paquete.ciudadNombre %></td>
            <td><%= paquete.transporteNombre %></td>
            <td><%= paquete.actividad1Nombre %></td>
            <td><%= paquete.actividad2Nombre %></td>
            <td><%= paquete.activo ? 'Sí' : 'No' %></td>
            <td>
              <form action="/api/paqueteDeViaje/eliminar/<%= paquete._id %>" method="POST">
                <button type="submit" class="btn btn-danger">Eliminar</button>
              </form>
              <form action="/api/paqueteDeViaje/editar/<%= paquete._id %>" method="GET">
                <button type="submit" class="btn btn-warning">Editar</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
