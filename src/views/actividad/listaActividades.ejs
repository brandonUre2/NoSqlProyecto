<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Actividades</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <header>
        <%- include('../shared/header') %>
      </header>
    <div class="container mt-4">
        <h1>Lista de Actividades</h1>

        <a href="/api/actividad/crear" class="btn btn-primary mb-3">Crear Actividad</a>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Descripci√≥n</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% actividades.forEach(actividad=> { %>
                    <tr>
                        <td>
                            <%= actividad.Nombre %>
                        </td>
                        <td>
                            <%= actividad.Descripcion %>
                        </td>
                        <td>

                            <form action="/api/actividad/eliminar/<%= actividad._id %>" method="POST">
                                <button type="submit" class="btn btn-danger">Eliminar</button>
                            </form>


                        </td>
                        <td>
                            <form action="/api/actividad/editar/<%= actividad._id %>" method="get">
                                <button type="submit" class="btn btn-warning">Editar</button>
                            </form>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>

    <!-- Agregar el JS de Bootstrap desde CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>