<!-- src/views/empleado/listaEmpleados.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Empleados</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <%- include('../shared/header') %>
      </header>
    <div class="container mt-4">
        <h1>Lista de Empleados</h1>
        
        <a href="/api/empleado/crear" class="btn btn-primary mb-3">Crear Empleado</a>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Salario</th>
                    <th scope="col">Fecha de Contrataci√≥n</th>
                    <th scope="col">Puesto</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% empleados.forEach(empleado => { %>
                    <tr>
                        <td><%= empleado.Apellido %></td>
                        <td><%= empleado.salario %></td>
                        <td><%= empleado.fechaContratacion.toLocaleDateString() %></td>
                        <td><%= empleado.PuestoNombre || 'N/A' %></td> 
                        <td>
                            <form action="/api/empleado/eliminar/<%= empleado._id %>" method="POST">
                                <button type="submit" class="btn btn-danger">Eliminar</button>
                            </form>
                            <form action="/api/empleado/editar/<%= empleado._id %>" method="GET">
                                <button type="submit" class="btn btn-warning">Editar</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
